<UserControl x:Class="QuarterViewStageMaker.MaptipSelectButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuarterViewStageMaker"
             mc:Ignorable="d" 
             d:Height="36" d:Width="36" BorderThickness="0"
             HorizontalAlignment="Left" VerticalAlignment="Top" >
    <Button x:Name="Button" Click="Button_Click" BorderThickness="2" BorderBrush="White" Width="36" Height="36">
        <Image x:Name="MaptipImage" Width="32" Height="32" 
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-1"/>
    </Button>
</UserControl>
